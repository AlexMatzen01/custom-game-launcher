<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GameLauncher.ViewModels"
        xmlns:helpers="clr-namespace:GameLauncher.Helpers"
        mc:Ignorable="d"
        Title="Game Launcher" Height="700" Width="1100"
        Background="{DynamicResource BgBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <helpers:PathToImageConverter x:Key="PathToImageConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource SidebarBgBrush}" Padding="20">
            <Grid>
                <StackPanel>
                    <TextBlock Text="LIBRARY" Foreground="{DynamicResource SecondaryTextBrush}" 
                               FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <RadioButton Content="All Games" IsChecked="True" Style="{StaticResource SidebarItemStyle}"/>
                    <RadioButton Content="Favorites" Style="{StaticResource SidebarItemStyle}"/>
                    <RadioButton Content="Recent" Style="{StaticResource SidebarItemStyle}"/>
                    
                    <TextBlock Text="COLLECTIONS" Foreground="{DynamicResource SecondaryTextBrush}" 
                               FontSize="12" FontWeight="Bold" Margin="0,25,0,15"/>
                    <Button Content="+ Create New" Style="{StaticResource TextButtonStyle}"/>
                </StackPanel>
                
                <Button Content="Toggle Theme" VerticalAlignment="Bottom"
                        Style="{StaticResource TextButtonStyle}"
                        Command="{Binding ToggleThemeCommand}"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Style="{StaticResource ModernTextBox}" 
                         Width="300" HorizontalAlignment="Left"
                         Tag="Search games..."
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="1" Content="+ Add Game" 
                        Style="{StaticResource ModernButton}"
                        Command="{Binding AddGameCommand}"/>
            </Grid>

            <!-- Games Grid -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredGames}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="CardBorder" Width="180" Height="240" Margin="10" 
                                    Background="{DynamicResource CardBgBrush}" 
                                    CornerRadius="8" ClipToBounds="True"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Launch" Command="{Binding DataContext.LaunchGameCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                        <Separator/>
                                        <MenuItem Header="Remove" Command="{Binding DataContext.RemoveGameCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Game Icon -->
                                    <Image Grid.Row="0" Source="{Binding IconPath, Converter={StaticResource PathToImageConverter}}"
                                           Stretch="Uniform" Margin="20"/>

                                    <!-- Game Info Overlay/Footer -->
                                    <Border Grid.Row="1" Padding="12" Background="#1FFFFFFF">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" 
                                                       Foreground="{DynamicResource TextBrush}" FontSize="14" 
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding PlayTimeDisplay}" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                                       FontSize="11" Margin="0,2,0,0"/>
                                            
                                            <Button Content="PLAY" Margin="0,10,0,0"
                                                    Style="{StaticResource ModernButton}"
                                                    Padding="0,5"
                                                    Command="{Binding DataContext.LaunchGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                            <DataTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="Background" Value="#333333"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="CardBorder" 
                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                 To="1.05" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetName="CardBorder" 
                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                 To="1.05" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="CardBorder" 
                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                 To="1" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetName="CardBorder" 
                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                 To="1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
